{
  "name": "@ras-cli/monorepo",
  "version": "0.0.1",
  "description": "rascal monorepo template",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "create": "node scripts/create.config.mjs",
    "build": "pnpm -r --filter=./packages/* run build",
    "prepare": "husky install",
    "commit": "git-cz",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,cjs,mjs,json}\"",
    "format:ci": "prettier --list-different \"**/*.{ts,tsx,js,jsx}\"",
    "lint": "eslint \"src/**/*.{js,ts,jsx,tsx}\" --fix",
    "lint:ci": "eslint \"src/**/*.{js,ts,jsx,tsx}\"",
    "publish": "pnpm --filter=./packages/* run build && pnpm changeset && pnpm changeset version && pnpm changeset publish"
  },
  "keywords": [
    "pnpm",
    "monorepo"
  ],
  "author": {
    "name": "Rascal-Coder",
    "github": "https://github.com/Rascal-Coder"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "rimraf": "^5.0.7",
    "@ras-cli/core": "workspace:*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
